#include<bits/stdc++.h>
using namespace std;
int main()
{
    int x;
    double y;
    cin>>x>>y;
    if(x<=2000 && x>0)
    {
        if(y<=2000 && y>=0)
        {
            if(x%5 == 0)
            {
                if (x<=y)
                {
                    y = y-(x+0.5);
                    cout << fixed << setprecision(2) << y<<endl;
                }
                else
                    cout << fixed << setprecision(2) << y<<endl;
            }
            else
                cout << fixed << setprecision(2) << y<<endl;
        }
    }
}
